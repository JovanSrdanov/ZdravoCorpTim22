<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <Color x:Key="TextPrimaryColor">#ccc</Color>
    <Color x:Key="DarkPrimaryColor">#20242b</Color>
    <Color x:Key="DarkSecondaryColor">#292c35</Color>
    <Color x:Key="ActivePrimaryColor">#4287f5</Color>
    <Color x:Key="DisabledPrimaryColor">#363a42</Color>
    
    <Color x:Key="ActiveSecondaryColor">#000</Color>
    <Color x:Key="DarkTernaryColor">#111</Color>

    <SolidColorBrush x:Key="DarkSecondary" Color="{StaticResource DarkSecondaryColor}"/>
    <SolidColorBrush x:Key="DarkPrimary" Color="{StaticResource DarkPrimaryColor}"/>
    <SolidColorBrush x:Key="ActivePrimary" Color="{StaticResource ActivePrimaryColor}"/>
    <SolidColorBrush x:Key="TextPrimary" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="DisabledPrimary" Color="{StaticResource DisabledPrimaryColor}"/>
    <SolidColorBrush x:Key="ActiveSecondary" Color="{StaticResource ActiveSecondaryColor}"/>
    <SolidColorBrush x:Key="DarkTernary" Color="{StaticResource DarkTernaryColor}"/>

    <sys:Double x:Key="HeadingFontSize">20</sys:Double>
    <sys:Double x:Key="MenuFontSize">18</sys:Double>
    <sys:Double x:Key="StandardFontSize">17</sys:Double>
</ResourceDictionary>