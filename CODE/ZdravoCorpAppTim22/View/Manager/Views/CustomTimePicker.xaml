<UserControl x:Class="ZdravoCorpAppTim22.View.Manager.Views.CustomTimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZdravoCorpAppTim22.View.Manager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <WrapPanel>
            <TextBlock Text="Hours"
                       Margin="0 0 6 0"/>
            <ComboBox Name="HourComboBox"
                      Margin="0 0 10 0"
                      SelectedValue="{Binding Path=Hours}"></ComboBox>
            <TextBlock Text="Minutes" 
                       Margin="0 0 6 0"/>
            <ComboBox Name="MinuteComboBox"
                      SelectedValue="{Binding Path=Minutes}"></ComboBox>
        </WrapPanel>
    </Grid>
</UserControl>
