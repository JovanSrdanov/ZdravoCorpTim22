<Window
    x:Class="ZdravoCorpAppTim22.View.PatientView.PatientSelectionForTemporaryPurpose"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ZdravoCorpAppTim22.View.PatientView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="PatientSelectionForTemporaryPurpose"
    Width="194.307"
    Height="149.771"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Label
            Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Izaberite koji ste pacijent:" />
        <Button
            Width="75"
            Margin="10,63,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Button_Click"
            Content="Dalje"
            RenderTransformOrigin="-0.655,0.734" />
        <ComboBox
            x:Name="SelectPatientCB"
            Width="120"
            Margin="10,36,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            DisplayMemberPath="Name"
            ItemsSource="{Binding Path=PatientList}"
            SelectedIndex="0" />





    </Grid>
</Window>
