<Window x:Name="ChoosingAppointment1" x:Class="ZdravoCorpAppTim22.View.PatientView.ChoosingAppointment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoCorpAppTim22.View.PatientView"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="ChoosingAppointment" Height="450" Width="703.119" Icon="/ZdravoCorpAppTim22;component/Resource/PatientResource/ZdravoCorpIcon.png"
        >
    
    <Grid Margin="0,0,2,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid  x:Name="dataGridSuggestedMedicalAppointments" 
          ItemsSource="{Binding Source=MedicalAppointmentsList}"
         SelectionMode="Single"   
                               AutoGenerateColumns="False" CanUserResizeColumns="False" IsReadOnly="True" 
                              HorizontalContentAlignment="Stretch" ColumnWidth="*" 
                             VerticalAlignment="Top"  VerticalScrollBarVisibility="Visible" Height="227" Margin="42,95,42,0" >

            <DataGrid.Columns>

                <DataGridTextColumn  Header="Datum" Binding="{Binding Interval.Start , StringFormat=\{0:dd.MM.yyyy\}}"/>
                <DataGridTextColumn  Header="Početak termina" Binding="{Binding Interval.Start, StringFormat=\{0:HH:mm\}}"/>
              

                <DataGridTemplateColumn Header="Lekar" >
                    <DataGridTemplateColumn.CellTemplate >
                        <DataTemplate >
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Path=Doctor.Name}"/>
                                <TextBlock Text=" "/>
                                <TextBlock Text="{Binding Path=Doctor.Surname}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn  Header="Šifra sobe" Binding="{Binding Room.Id}"/>




            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="ConfirmAppointment" Content="Zakazi ovaj termin" HorizontalAlignment="Left" VerticalAlignment="Top" Width="135" Margin="516,352,0,0" Foreground="Black" Background="#FF23B623" Click="ConfirmAppointment_Click"/>
    </Grid>
</Window>
