<Window x:Name="ChoosingAppointment1" x:Class="ZdravoCorpAppTim22.View.PatientView.ChoosingAppointment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoCorpAppTim22.View.PatientView"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="ChoosingAppointment" Height="450" Width="800"
        >
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="SelectedDateLabel" Content="Datum" HorizontalAlignment="Left" Margin="39,23,0,0" VerticalAlignment="Top" Width="213"/>
        <Label x:Name="SelectedDoctorLabel" Content="Doktor" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="39,54,0,0" Width="249"/>
        <Label x:Name="SelectedAppointmentType" Content="Vrsta termina" HorizontalAlignment="Left" Margin="293,23,0,0" VerticalAlignment="Top" Width="209" Grid.ColumnSpan="2"/>
        <Label x:Name="SelectedPriority" Content="Prioritet" HorizontalAlignment="Left" Margin="293,54,0,0" VerticalAlignment="Top" Width="158" Grid.ColumnSpan="2"/>
        <DataGrid  x:Name="dataGridSuggestedMedicalAppointments"  IsReadOnly="True" VerticalAlignment="Top"
          ItemsSource="{Binding Source=MedicalAppointmentsList}"
          AutoGenerateColumns="False" CanUserResizeColumns="True" Height="175" Margin="39,131,46,0" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="3">
            <DataGrid.Columns>
               
                <DataGridTextColumn Width="*" Header="Tip termina" Binding="{Binding Path=Type}"/>
                <DataGridTextColumn Width="*" Header="Pocetak termina" Binding="{Binding Path=Interval.Start}"/>
                <DataGridTextColumn Width="*" Header="Kraj termina" Binding="{Binding Path=Interval.End}"/>
                <DataGridTextColumn Width="*" Header="Ime lekara" Binding="{Binding Path=Doctor.Name}"/>
                <DataGridTextColumn Width="*" Header="Prezime lekara" Binding="{Binding Path=Doctor.Surname}"/>
                <DataGridTextColumn Width="*" Header="Sifra sobe" Binding="{Binding Path=Room.Id}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="ConfirmAppointment" Content="Zakazi ovaj termin" HorizontalAlignment="Left" VerticalAlignment="Top" Width="135" Margin="624,361,0,0" Foreground="Black" Background="#FF23B623" Click="ConfirmAppointment_Click"/>
        <Label x:Name="CurrentPatient" Content="Label" HorizontalAlignment="Left" Margin="581,23,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
