<Window x:Class="ZdravoCorpAppTim22.View.PatientView.ZdravoCorpTabs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoCorpAppTim22.View.PatientView"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="ZdravoCorpTabs" Height="640" Width="1280">
    <Grid>
        <TabControl TabStripPlacement="Left" Margin="10" HorizontalContentAlignment="Left" FontSize="18">
            <TabItem Header="Informacije o bolnici">
                <Grid Background="White" >
                    <Label Content="Informacije o bolnici" HorizontalAlignment="Center" VerticalAlignment="Top"  VerticalContentAlignment="Center" FontWeight="Bold" FontSize="24" />


                    <Image  x:Name="MapLocation"   Height="250"  Width="250"  Source="/ZdravoCorpAppTim22;component/Resource/PatientResource/MapLocation.jpg" Margin="676,180,144,153" ></Image>


                    <Label Content="Lokacija: &#xD;&#xA;Frankopanova 34, Novi Sad" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="676,117,0,0" Width="226"/>
                    <Button Content="Ostavite recenziju bolnice" HorizontalAlignment="Left" Margin="676,468,0,0" VerticalAlignment="Top" Width="250" Background="Green" Foreground="White"  />
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="152,122,0,0" Height="308" Width="266"><Run Text="Kontakt:"/><LineBreak/><Run/><LineBreak/><Run Text="Upravnik:  "/><Run Text="Rade Stojanovi"/><Run Text="ć"/><LineBreak/><Run Text="E"/><Run Text="-mail"/><Run Text=": radecar@gmail.com"/><LineBreak/><Run Text="Tel: +381 647055642"/><LineBreak/><Run/><LineBreak/><Run Text="Sekretar Luka Pikula"/><LineBreak/><Run Text="E"/><Run Text="-mail"/><Run Text=": lukalegenda@gmail.com"/><LineBreak/><Run Text="Tel: +381 640235642"/><LineBreak/><Run/><LineBreak/><Run Text="Radno vreme:"/><LineBreak/><Run Text="Svaki dan od 06:00 do 23:00"/></TextBlock>
                </Grid>
            </TabItem>
            <TabItem Header="Obaveštenja" >
                <Grid Background="White">
                    <Label Content="Obaveštenja" HorizontalAlignment="Center" VerticalAlignment="Top"  VerticalContentAlignment="Center" FontWeight="Bold" FontSize="24" />
                </Grid>
            </TabItem>
            <TabItem Header="Termini">
                <Grid Background="White">
                    <Label Content="Termini" HorizontalAlignment="Center" VerticalAlignment="Top"  VerticalContentAlignment="Center" FontWeight="Bold" FontSize="24" HorizontalContentAlignment="Center" Margin="486,0,490,0"  />
                    <Button x:Name="AddAppointmentPatient" Content="Zakažite termin" HorizontalAlignment="Left" Margin="846,464,0,0" VerticalAlignment="Top" Width="182" Click="AddAppointmentPatient_Click" Background="#FF7EDE51" VerticalContentAlignment="Center"/>
                    <Button x:Name="RemoveAppointmentPatient" Content="Otkazi termin" HorizontalAlignment="Left" Margin="28,464,0,0" VerticalAlignment="Top" Width="182" Click="RemoveAppointmentPatient_Click" Background="#FFDE3232" Foreground="White" VerticalContentAlignment="Center"/>
                    <DataGrid x:Name="dataGrid"  IsReadOnly="True"
                        ItemsSource="{Binding Source=MedicalAppointmentList}" 
                        AutoGenerateColumns="False" CanUserResizeColumns="False" VerticalAlignment="Top" HorizontalContentAlignment="Center" Height="370"  Width="1000" Margin="28,47,42,0" >
                        <DataGrid.Columns>

                            <DataGridTextColumn Width="*" Header="Početak termina" Binding="{Binding Interval.Start}"/>
                            <DataGridTextColumn Width="*" Header="Kraj termina" Binding="{Binding Interval.End}"/>
                            <DataGridTextColumn Width="*" Header="Vrsta termina" Binding="{Binding Type}"/>
                            <DataGridTextColumn Width="*" Header="Ime lekara" Binding="{Binding Doctor.Name}"/>
                            <DataGridTextColumn Width="*" Header="Prezime lekara" Binding="{Binding Doctor.Surname}"/>
                            <DataGridTextColumn Width="*" Header="Šifra sobe" Binding="{Binding Room.Id}"/>

                        </DataGrid.Columns>
                    </DataGrid>
                    <Button x:Name="ChangeAppointmentDateTime" Content="Promena termina" HorizontalAlignment="Left" Margin="442,464,0,0" VerticalAlignment="Top" Width="182" Background="Yellow"/>
                </Grid>
            </TabItem>
            <TabItem Header="Pregled kartona">
                <Grid Background="White">
                    <Label Content="Pregled kartona" HorizontalAlignment="Center" VerticalAlignment="Top"  VerticalContentAlignment="Center" FontWeight="Bold" FontSize="24" />
                </Grid>
            </TabItem>
            <TabItem Header="Podsetnik">
                <Grid Background="White">
                    <Label Content="Podsetnik" HorizontalAlignment="Center" VerticalAlignment="Top"  VerticalContentAlignment="Center" FontWeight="Bold" FontSize="24" />
                </Grid>
            </TabItem>
            <TabItem Header="Elektronska potvrda">
                <Grid Background="White">
                    <Label Content="Elektronska potvrda" HorizontalAlignment="Center" VerticalAlignment="Top"  VerticalContentAlignment="Center" FontWeight="Bold" FontSize="24" />
                </Grid>
            </TabItem>

        </TabControl>

        <Button x:Name="LogOffButton"  Background="Red" Foreground="White" FontSize="18" Content="Odjavi me" HorizontalAlignment="Left" Margin="12,538,0,0" VerticalAlignment="Top" Width="162"/>

    </Grid>
</Window>
