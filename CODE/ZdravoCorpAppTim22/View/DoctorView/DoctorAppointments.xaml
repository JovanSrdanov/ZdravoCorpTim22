<Window x:Class="ZdravoCorpAppTim22.View.DoctorView.DoctorAppointments"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoCorpAppTim22.View.DoctorView"
        mc:Ignorable="d"
        Title="DoctorAppointments" Height="450" Width="800">
    <Grid>
        <DataGrid Name="appointmentListGrid" ItemsSource="{Binding Source=currentDoctorAppointments}"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Path=Id}"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Path=Type}"/>
                <DataGridTextColumn Header="Date" Binding="{Binding Path=MedicalAppointmentStartDateTime}"/>
                <DataGridTextColumn Header="Room" Binding="{Binding Path=Room.id}"/>
                <DataGridTextColumn Header="Patient" Binding="{Binding Path=Patient.Name}"/>
                <DataGridTextColumn Header="Doctor" Binding="{Binding Path=Doctor.Name}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Name="btnCreate" Content="Create" HorizontalAlignment="Left" Margin="269,259,0,0" VerticalAlignment="Top" Click="btnCreate_Click"/>
        <Button Name="btnDelete" Content="Delete" HorizontalAlignment="Left" Margin="452,259,0,0" VerticalAlignment="Top" Click="btnDelete_Click"/>
    </Grid>
</Window>
