<Window x:Class="ZdravoCorpAppTim22.View.DoctorView.MedicalRecordView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoCorpAppTim22.View.DoctorView"
        mc:Ignorable="d"
        Title="MedicalRecordView" Height="700" Width="800" Closed="MedRecClosed">
    <Grid>
        <Label Content="Conditions" HorizontalAlignment="Left" Margin="123,108,0,0" VerticalAlignment="Top"/>
        <Label Content="Name &amp; Surname" HorizontalAlignment="Left" Margin="78,24,0,0" VerticalAlignment="Top"/>
        <Label Content="Allergies" HorizontalAlignment="Left" Margin="400,103,0,0" VerticalAlignment="Top"/>
        <Label Content="Past reports" HorizontalAlignment="Left" Margin="128,356,0,0" VerticalAlignment="Top"/>
        <Label Content="Medications" HorizontalAlignment="Left" Margin="401,360,0,0" VerticalAlignment="Top"/>
        <Label Content="Unique Personal Registration Number" HorizontalAlignment="Left" Margin="438,24,0,0" VerticalAlignment="Top"/>
        <Label Content="Gender" HorizontalAlignment="Left" Margin="220,24,0,0" VerticalAlignment="Top"/>
        <Label Content="Date of birth" HorizontalAlignment="Left" Margin="323,24,0,0" VerticalAlignment="Top"/>

        <Button x:Name="CreateReportBtn" Content="Create report" HorizontalAlignment="Left" Margin="324,622,0,0" VerticalAlignment="Top"
                Foreground="White" Background="MediumPurple" Click="CreateReportBtnClick"/>
        <Button Content="Back" HorizontalAlignment="Left" Margin="467,622,0,0" VerticalAlignment="Top"
                Foreground="White" Background="MediumPurple" Click="BackBtn"/>
        <Button x:Name="OpenReportBtn" Content="Open report" HorizontalAlignment="Left" Margin="200,622,0,0" VerticalAlignment="Top"
                Foreground="White" Background="MediumPurple" Click="OpenReportBtnClick"/>
        <Button x:Name="FinishReportBtn" Content="Finish report" HorizontalAlignment="Left" Margin="564,622,0,0" VerticalAlignment="Top"
                Foreground="White" Background="MediumPurple" Click="FinishReportClick"/>

        <TextBlock x:Name="NameSurnameBlock" HorizontalAlignment="Left" Margin="78,50,0,0" TextWrapping="Wrap" 
                   Text="" VerticalAlignment="Top" Foreground="MediumPurple" FontWeight="Bold" FontSize="18"/>
        <TextBlock x:Name="GenderBlock" HorizontalAlignment="Left" Margin="220,50,0,0" TextWrapping="Wrap" 
                   Text="" VerticalAlignment="Top" Foreground="MediumPurple" FontWeight="Bold" FontSize="18"/>
        <TextBlock x:Name="DateBirthBlock" HorizontalAlignment="Left" Margin="323,50,0,0" TextWrapping="Wrap" 
                   Text="" VerticalAlignment="Top"  Foreground="MediumPurple" FontWeight="Bold" FontSize="18"/>
        <TextBlock x:Name="JMBGBlock" HorizontalAlignment="Left" Margin="438,50,0,0" TextWrapping="Wrap" 
                   Text="" VerticalAlignment="Top" Foreground="MediumPurple" FontWeight="Bold" FontSize="18"/>

        <ListBox x:Name="ProblemsListBox" Margin="123,139,484,356"/>
        <ListBox x:Name="AllergiesListBox" Margin="401,139,210,356"/>
        <ListBox x:Name="PastReportsListBox" Margin="123,391,484,97" DisplayMemberPath="ReportDate"/>
        <ListBox x:Name="MedicationsListBox" Margin="401,391,210,97"/>
    </Grid>
</Window>
