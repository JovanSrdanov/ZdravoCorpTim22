<Page x:Class="ZdravoCorpAppTim22.View.DoctorView.Novi_MVVM.Views.HomeScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZdravoCorpAppTim22.View.DoctorView.Novi_MVVM.Views"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1024"
      Title="HomeScreen">
    <Grid>
        <TextBlock Margin="256,53,0,0" Text="Welcome to Zdravo Corp"
                   Style="{StaticResource ResourceKey=h1}"/>
        <Button x:Name="SchedulingBtn" Margin="173,167,0,0" Click="ScheduleListBtn" 
                Style="{StaticResource ResourceKey=homeScreenButton}">
            <Button.Background>
                <ImageBrush ImageSource="/Resource/DoctorResource/schedule.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="SchedulingBtn_Copy" Margin="688,355,0,0" Click="ViewMedRecordsClick" 
                Style="{StaticResource ResourceKey=homeScreenButton}">
            <Button.Background>
                <ImageBrush ImageSource="/Resource/DoctorResource/book.png"/>
            </Button.Background>
        </Button>
        <Label Content="Scheduling list" Margin="163,271,0,0" FontSize="16" 
               Style="{StaticResource ResourceKey=normalLabels}"/>
        <Label Content="View medical records" Margin="656,460,0,0" FontSize="16" 
            Style="{StaticResource ResourceKey=normalLabels}"/>
        <Button x:Name="RequestForAbsenceBtn" Margin="172,534,0,0" Click="RequestForAbsenceBtnClick" 
            Style="{StaticResource ResourceKey=homeScreenButton}">
            <Button.Background>
                <ImageBrush ImageSource="/Resource/DoctorResource/arrow.png"/>
            </Button.Background>
        </Button>
        <Label Content="Request for absence" Margin="142,640,0,0" FontSize="16" 
            Style="{StaticResource ResourceKey=normalLabels}"/>
        <Button x:Name="DrugsBtn" Margin="704,167,0,0" Style="{StaticResource ResourceKey=homeScreenButton}"   
                Click="DrugsBtnClick">
            <Button.Background>
                <ImageBrush ImageSource="/Resource/DoctorResource/syringe.png"/>
            </Button.Background>
        </Button>
        <Label Content="Drug requests" Margin="688,271,0,0" FontSize="16" 
            Style="{StaticResource ResourceKey=normalLabels}"/>
        <Button Margin="440,167,0,0" Style="{StaticResource ResourceKey=homeScreenButton}">
            <Button.Background>
                <ImageBrush ImageSource="/Resource/DoctorResource/document.png"/>
            </Button.Background>
        </Button>
        <Button Margin="173,355,0,0" Style="{StaticResource ResourceKey=homeScreenButton}">
            <Button.Background>
                <ImageBrush ImageSource="/Resource/DoctorResource/gear.png"/>
            </Button.Background>
        </Button>
        <Button Margin="441,355,0,0" Style="{StaticResource ResourceKey=homeScreenButton}">
            <Button.Background>
                <ImageBrush ImageSource="/Resource/DoctorResource/stethoscope.png"/>
            </Button.Background>
        </Button>
        <Label Content="Create certificate" Margin="421,271,0,0" FontSize="16" 
            Style="{StaticResource ResourceKey=normalLabels}"/>
        <Label Content="Request consumable" Margin="408,460,0,0" FontSize="16" 
            Style="{StaticResource ResourceKey=normalLabels}"/>
        <Label Content="Report malfunction" Margin="144,460,0,0" FontSize="16" 
            Style="{StaticResource ResourceKey=normalLabels}"/>
    </Grid>
</Page>
