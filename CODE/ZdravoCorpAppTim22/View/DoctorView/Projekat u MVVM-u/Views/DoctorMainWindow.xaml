<Window x:Class="ZdravoCorpAppTim22.View.DoctorView.Projekat_u_MVVM_u.Views.DoctorMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:ZdravoCorpAppTim22.View.DoctorView.Projekat_u_MVVM_u.Views"
        xmlns:vms="clr-namespace:ZdravoCorpAppTim22.View.DoctorView.Projekat_u_MVVM_u.ViewModels"
        mc:Ignorable="d"
        Title="DoctorMainWindow" Height="768" Width="1024">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vms:HomeViewModel}">
                <view:HomeView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:DoctorAppointmentsViewModel}">
                <view:DoctorAppointmentsView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:CreateAppointmentViewModel}">
                <view:CreateAppointmentView/>
            </DataTemplate>
        </Grid.Resources>

        <ContentControl Content="{Binding CurrentViewModel}"/>

    </Grid>
</Window>
