<Window x:Class="ZdravoCorpAppTim22.View.DoctorView.DoctorHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoCorpAppTim22.View.DoctorView"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="DoctorHome" Height="768" Width="1024" ResizeMode="NoResize" WindowStyle="None">
    <Grid>
        <ComboBox x:Name="SelectDoctorCBOX" HorizontalAlignment="Left" Margin="360,244,0,0" VerticalAlignment="Top" Width="249" DisplayMemberPath="Name"
                  FontSize="35" BorderBrush="#FF8C39A5" BorderThickness="2">
        </ComboBox>
        <TextBlock Text="Select a doctor" Style="{StaticResource h1}" Margin="345,118,0,0"/>
        <Button x:Name="NextButton" Content="Next" Margin="360,561,0,0" Width="84" 
                Click="NextButton_Click" FontSize="25" Style="{StaticResource normalButton}"/>
        <Button x:Name="BackBtn" Content="Back" Margin="533,561,0,0" Width="76" 
                Click="BackBtnClick" FontSize="25" Style="{StaticResource normalButton}"/>
    </Grid>
</Window>
